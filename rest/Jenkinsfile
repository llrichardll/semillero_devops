pipeline {
    
    agent any

    stages {
        stage ('Compile Stage'){
            steps {

                steps withGradle (gradle : 'gradle-7.5.1'){
                   sh 'mvn clean compile'
               }
            }
           
        }

        stage ('testing stage'){
          steps {

                steps withGradle (gradle : 'gradle-7.5.1'){
                   sh 'mvn test'
               }
            }  
        }
        stage ('Deployment Stage'){
            steps {

                steps withGradle (gradle : 'gradle-7.5.1'){
                   sh 'mvn deploy'
               }
            }  
        }
    }
}